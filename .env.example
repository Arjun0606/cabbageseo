# CabbageSEO Environment Variables
# Copy this to .env.local and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/cabbageseo
# For Supabase: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# ===========================================
# AI PROVIDERS (at least one required)
# ===========================================

# Anthropic Claude (PRIMARY - Recommended)
# Get key: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (gpt-5-mini for knowledge-based citation checks)
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Perplexity (sonar model for citation checks with live search)
# Get key: https://docs.perplexity.ai/
PERPLEXITY_API_KEY=pplx-...

# Google AI (gemini-2.5-flash for search-grounded citation checks)
# Get key: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=...

# ===========================================
# SEO DATA PROVIDERS (at least one required)
# ===========================================

# DataForSEO (PRIMARY - Recommended)
# Sign up: https://dataforseo.com/
DATAFORSEO_LOGIN=your-email@example.com
DATAFORSEO_PASSWORD=your-api-password

# SerpAPI (ALTERNATIVE)
# Sign up: https://serpapi.com/
SERPAPI_KEY=...

# Ahrefs (OPTIONAL - for backlink data)
# Get API access: https://ahrefs.com/api
AHREFS_API_KEY=...

# ===========================================
# CONTENT OPTIMIZATION (optional)
# ===========================================

# Surfer SEO (OPTIONAL)
# API access via Surfer dashboard
SURFER_API_KEY=...

# ===========================================
# GOOGLE SERVICES (for GSC & GA4)
# ===========================================

# Create OAuth credentials: https://console.cloud.google.com/
# Enable APIs: Search Console API, Analytics Admin API, Analytics Data API
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ===========================================
# CMS INTEGRATIONS (optional)
# ===========================================

# Webflow
# Get API key: https://webflow.com/dashboard/account/integrations
WEBFLOW_API_KEY=...

# Shopify
# Create private app or custom app: https://partners.shopify.com/
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_...

# WordPress is configured per-site in the dashboard

# ===========================================
# PAYMENTS (required for production)
# ===========================================

# Dodo Payments
# Sign up: https://dodopayments.com/
DODO_PAYMENTS_API_KEY=...
DODO_PAYMENTS_WEBHOOK_KEY=...

# Dodo Product IDs (from your Dodo dashboard)
DODO_SCOUT_MONTHLY_ID=...
DODO_SCOUT_YEARLY_ID=...
DODO_COMMAND_MONTHLY_ID=...
DODO_COMMAND_YEARLY_ID=...
DODO_DOMINATE_MONTHLY_ID=...
DODO_DOMINATE_YEARLY_ID=...

# ===========================================
# EMAIL (required for notifications)
# ===========================================

# Resend (transactional email)
# Sign up: https://resend.com/
RESEND_API_KEY=...
RESEND_FROM_EMAIL=notifications@yourdomain.com

# ===========================================
# APPLICATION
# ===========================================

# App URL (for OAuth callbacks, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# ADMIN ACCESS (Keep SECRET!)
# ===========================================

# Secret key for admin-only APIs (wallet monitoring, etc.)
# Generate with: openssl rand -base64 32
ADMIN_SECRET_KEY=your-secret-admin-key-here

# Bulk scan API keys (comma-separated, for /api/v1/scan/bulk)
BULK_API_KEYS=key1,key2

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# SUPABASE (if using Supabase Auth)
# ===========================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# OPTIONAL: BACKGROUND JOBS
# ===========================================

# Inngest (for background job processing)
# Sign up: https://www.inngest.com/
INNGEST_EVENT_KEY=...
INNGEST_SIGNING_KEY=...

# OR Trigger.dev
# Sign up: https://trigger.dev/
TRIGGER_API_KEY=...

# ===========================================
# ANALYTICS (optional)
# ===========================================

# PostHog (product analytics, session replay)
# Sign up: https://posthog.com/
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
